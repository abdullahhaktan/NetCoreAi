@model List<NetCoreAi.Project2_ApiConsumeUi.Dto.ResultCustomerDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /> <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Müşteri Ad Soyad</th>
                <th>Bakiye</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        @foreach(var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.CustomerName @item.CustomerSurname</td>
                    <td>@item.CustomerBalance</td>
                    <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-warning">Güncelle</a></td>
                </tr>
            </tbody>
       }
    </table>
    <a href="/customer/CreateCustomer" class="btn btn-success">Yeni müşteri ekleme</a>
</div>
